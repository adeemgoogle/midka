FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY nuget.config .
COPY src/loader/TradePointsLoader/*.csproj ./TradePointsLoader/
RUN dotnet restore "./TradePointsLoader/TradePointsLoader.csproj"

# Copy everything else and build
COPY src/loader/TradePointsLoader/ ./TradePointsLoader/
WORKDIR "/src/TradePointsLoader"
RUN dotnet build "TradePointsLoader.csproj" -c release -o /app/build

FROM build AS publish
RUN dotnet publish "TradePointsLoader.csproj" -c release -o /app/publish --no-restore

# Build runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TradePointsLoader.dll"]
