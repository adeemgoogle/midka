Encoding.RegisterProvider(CodePagesEncodingProvider.Instance);
string secnameEncode = row.GetAsString("SECNAME");
if (secnameEncode != null)
{
    byte[] utf8Byte = Encoding.UTF8.GetBytes(secnameEncode);
    Encoding cp1251 = Encoding.GetEncoding("windows-1251");

    byte[] cp1251Bytes = Encoding.Convert(Encoding.UTF8, cp1251, utf8Byte);
    string secname = cp1251.GetString(utf8Byte);
    
    securityRow.secName = secname;
}

