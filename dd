func postRequest(cli *http.Client, request *http.Request) ([]byte, error) {

	resp, err := cli.Do(request)
	if err != nil {
		return nil, err
	}
	defer resp.Body.Close()

	if resp.StatusCode != 200 {
		return nil, errors.New("error from merchant, status: " + resp.Status)
	}

	respBody, readErr := io.ReadAll(resp.Body)
	if readErr != nil {
		return nil, readErr
	}

	return respBody, nil
}
