При отправке запроса вместо амперсанды пишет "https://fo.sulpak.kz:8190/api/Methods/GetBalanceByPhone?APIKey=ce454999-5721-4343-9wed-aa47b676ca9e\u0026phone=7778952
4881\" почему? как исправить?
	request, err := http.NewRequest("POST", s.url+"?APIKey="+s.apiKey+"&phone="+req.Phone, nil)
	if err != nil {
		return nil, err
	}

	resp, err := postRequest(s.cli, request)
	if err != nil {
		return nil, err
	}

	balanceSG, err := s.unmarchal(resp)
	if err != nil {
		return nil, err
	}

	balanceSA := new(model.Balance)
	balanceSA.Type = "additional"
	balanceSA.Amount = 0

	merchantS := new(model.Merchant)
	merchantS.MerchantId = "sulpak"
	merchantS.Phone = req.Phone
	merchantS.Balances = append(merchantS.Balances, balanceSG)
	merchantS.Balances = append(merchantS.Balances, balanceSA)
	return merchantS, nil
