package models

import (
	"github.com/olivere/elastic/v7"
	"github.com/lib/pq"
)

// ATM represents the structure of an ATM
type ATM struct {
	Id                 string       `json:"id" db:"atm_id"`
	Filial             string       `json:"filial" db:"filial"`
	Locality           string       `json:"locality" db:"locality"`
	KatoCode           string       `json:"kato" db:"kato"`
	Adress             string       `json:"adress" db:"adress"`
	AdressKaz          string       `json:"adressKaz" db:"adress_kaz"`
	Location           string       `json:"location" db:"location"`
	CashInFlag         bool         `json:"cash_in_fl" db:"cashin_flag"`
	PublicFlag         bool         `json:"public_fl" db:"public_flag"`
	AllDayFlag         bool         `json:"allDay_fl" db:"allday_flag"`
	WeekdayTime        WorkTime     `json:"weekday_time" db:"weekday_time"`
	SaturdayWorkTime   WorkTime     `json:"sat_work_time" db:"sat_work_time"`
	SundayWorkTime     WorkTime     `json:"sun_work_time" db:"sun_work_time"`
	Currency           pq.StringArray `json:"currency" db:"currency"`
	CashInCurrency     pq.StringArray `json:"cash_in_currency" db:"cash_in_currency"`
	CashInCurrencyUSD  bool         `json:"cash_in_currency_USD" db:"cash_in_currency_USD"`
	CashInCurrencyEUR  bool         `json:"cash_in_currency_EUR" db:"cash_in_currency_EUR"`
	CashInCurrencyRUB  bool         `json:"cash_in_currency_RUB" db:"cash_in_currency_RUB"`
	CashOutCurrencyUSD bool         `json:"cash_out_currency_USD" db:"cash_out_currency_USD"`
	CashOutCurrencyEUR bool         `json:"cash_out_currency_EUR" db:"cash_out_currency_EUR"`
	CashOutCurrencyRUB bool         `json:"cash_out_currency_RUB" db:"cash_out_currency_RUB"`
	CurrentWork        bool         `json:"currentWork" db:"current_Work"`
	GetLocation        GeoLocation  `json:"geo_location" db:"geo_location"`
}

// GeoLocation represents the geolocation structure
type GeoLocation struct {
	Lat float64 `json:"lat" db:"lat"`
	Lng float64 `json:"lng" db:"lng"`
}

// WorkTime represents the working hours structure
type WorkTime struct {
	StartTime  string `json:"start_time" db:"start_time"`
	EndTime    string `json:"end_time" db:"end_time"`
	LunchStart string `json:"lunch_start" db:"lunch_start"`
	LunchEnd   string `json:"lunch_end" db:"lunch_end"`
}
