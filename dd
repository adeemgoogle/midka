public class QueryDto
    
    {
        
        /// <summary>
        /// GraphQL query text
        /// </summary>
        public string Query { get; set; }

        public string OperationName { get; set; }

        public string NamedQuery { get; set; }
       
        /// <summary>
        /// Query parameters
        /// </summary>
        public JObject Variables { get; set; }
    }
}
