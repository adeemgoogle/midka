FROM microsoft/dotnet/sdk:6.0 AS build
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM microsoft/dotnet/sdk:6.0 AS build
WORKDIR /src

COPY nuget.config ./
COPY src/loader/T/T.csproj T/
RUN cd T && dotnet restore .

# Copy everything else and build
COPY src/loader/T/. T/
WORKDIR "/src/T"
RUN dotnet build "T.csproj" -c release -o /app/build

FROM build AS publish
WORKDIR "/src/T"
RUN dotnet publish "T.csproj" -c release -o /app/publish --no-restore

# Build runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "T.dll"]
